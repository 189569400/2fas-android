<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="150" android:exitFadeDuration="150">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="2.5dp" android:color="@color/colorAccent" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item>
        <ripple android:color="@color/colorRipple">
            <item android:id="@android:id/mask" android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <!--                    <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />-->
                    <corners android:radius="8dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/colorDivider" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>